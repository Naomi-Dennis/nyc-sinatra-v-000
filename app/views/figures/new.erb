<form action="/figures/new" method="post">
  Figure Name:
  <input id="figure_name" name="figure[name]" type="text" />
  <br/>
  <h4>Titles</h4>
  <% @titles.each do | title | %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"/><%= title.name %><br/>
  <% end %>
  <br/>
  Add New Title:
  <input type="text" name="title[name]" id="new_title"/>
  <br/>
  <h4>Landmarks</h4>
  <% @landmarks.each do | landmark | %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"/><%= landmark.name %><br/>
  <% end %>
  <br/>
  Add New Landmark:
  <input type="text" name="landmark[name]" id="new_landmark"/>
  <br/><br/>
  <input type="submit" id="Create New Figure" value="Create New Figure"/>
</form>
<br/>
<a href="/figures">View All </a>
